<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.co.swm.board.mapper.ListMapper">
    <resultMap id="Place" type="kr.co.swm.board.list.model.dto.ListDto">
        <id column="ACCOMMODATION_NO" property="BoardNo"></id>
        <result column="NAME" property="BoardName"></result>
        <result column="ACCOMMODATION_TYPE" property="BoardType"></result>
        <result column="PROVINCE_CODE" property="BoardAddress"></result>
        <result column="CHECK_IN_TIME" property="BoardCheckIn"></result>
    </resultMap>
<!--    <resultMap id="Rate" type="kr.co.swm.board.list.model.dto.ListDto">-->
<!--        <result column="RATING" property="BoardRating"></result>-->
<!--    </resultMap>-->

    <select id="getPlace" resultMap="Place">
        select a.name, a.ACCOMMODATION_TYPE, a.PROVINCE_CODE, r.ROOM_NAME, r.CHECK_IN_TIME from ACCOMMODATION a
        JOIN ROOM r ON r.ACCOMMODATION_NO = a.ACCOMMODATION_NO;
    </select>

<!--    <select id="getRate" resultMap="Rate">-->
<!--        select r2.rating from room r join review r2 on r.ROOM_NO = r2.ROOM_NO;-->
<!--    </select>-->

    <select id="getTotalCount" resultType="int">
        select count(*) from ACCOMMODATION a;
    </select>

</mapper>
